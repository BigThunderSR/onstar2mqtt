{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:recommended"
    ],
    "npm": {
        "minimumReleaseAge": "3 days",
        "rangeStrategy": "bump"
    },
    "labels": [
        "Renovate",
        "dependencies"
    ],
    "packageRules": [
        {
            "matchManagers": [
                "npm"
            ],
            "addLabels": [
                "javascript"
            ]
        },
        {
            "matchPackageNames": ["onstarjs2"],
            "postUpgradeTasks": {
                "commands": ["npm run sync-patchright"],
                "fileFilters": ["package.json"],
                "executionMode": "update"
            },
            "addLabels": ["patchright-sync", "onstarjs2-dependency"]
        },
        {
            "matchCategories": [
                "js"
            ],
            "addLabels": [
                "javascript"
            ]
        },
        {
            "matchManagers": [
                "github-actions"
            ],
            "addLabels": [
                "github_actions"
            ]
        },
        {
            "matchManagers": [
                "dockerfile"
            ],
            "addLabels": [
                "dockerfile"
            ]
        },
        {
            "addLabels": [
                "dockerfile"
            ],
            "matchPackageNames": [
                "/dockerfile/"
            ]
        },
        {
            "matchManagers": [
                "nvm"
            ],
            "addLabels": [
                "nvm"
            ]
        }
    ]
}